<%= simple_form_for [@artwork] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :category %>
    <%= f.input :price_per_day %>
    <%= f.input :image %>
    <% if @artwork.persisted? %>
    <%= f.submit "edit artwork", class: "btn btn-dark" %>
    <% else %>
    <%= f.submit "Add artwork", class: "btn btn-dark" %>
    <% end %>
  <% end %>
